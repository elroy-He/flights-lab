<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  </head>
  <body class="p-3 mb-2 bg-light text-dark".bg-light>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <span>Welcome to <%= title %>  </span><a href="../">HOME</a>

    <h4>Here is your flight inof </h4>
    <a href= "/flights/<%= flight._id %>/tickets/new">Add New Tickets</a>


    <ul class="list-group">

        <% tickets.forEach(t => { %>
          <li class="list-group-item list-group-item-dark"><%= t.seat %> <%= t.price %></li>
        <% }) %>
    </ul>

    <ul class="list-group">
      <li class="list-group-item list-group-item-dark"><%= flight.airline %> </li>
      <li class="list-group-item list-group-item-dark"><%= flight.airport %></li>
      <li class="list-group-item list-group-item-dark"><%= flight.flightNo %></li>
      <li class="list-group-item list-group-item-dark"><%= flight.departs %></li>
      <% if(flight.destinations.length > 0) { %>
      <% flight.destinations.forEach( function(d) { %>
        <li class="list-group-item list-group-item-dark"><%= d.airport %></li>
        <li class="list-group-item list-group-item-dark"><%= d.arrival %></li>
        <% }); %>
        <% } %>
    </ul>


    <form action="/flights/<%= flight._id %>" method="POST">
      <label>airline
        <select name="airport">
          <option value="AUS">AUS</option>
          <option value="DFW">DFW</option>
          <option value="DEN">DEN</option>
          <option value="LAX">LAX</option>
          <option value="SAN">SAN</option>
        </select>
      </label><br>
        <label for="date">DATE</label>
        <input id="date" type="datetime-local" name="arrival">
      <input type="submit" value="Add Destination">
    </form>
  </body>
</html>